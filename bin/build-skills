#!/bin/bash

source "$(dirname "$0")/make-json"

listAllSkills () {
  local MODULES
  MODULES=$(ls -1 ./src/modules)
  node ./bin/generate-skill-consts ./src/data/skills.json
  for m in $MODULES
  do
    if [ -f "./src/modules/$m/data/skills.json" ]
    then
      node ./bin/generate-skill-consts "./src/modules/$m/data/skills.json"
    fi
  done
}

echo -n "building skills... "
makeJSON listAllSkills > ./src/consts/skills.json
echo "done"
